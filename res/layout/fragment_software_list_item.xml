<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:market="http://schemas.android.com/apk/res/com.pekall.market"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="4.0dip" >

    <RelativeLayout
		android:id="@+id/relative1"
        android:layout_width="60.0dip"
        android:layout_height="60.0dip"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:focusable="false"
        android:padding="0.0dip" >

        <ImageView
            android:layout_width="60.0dip"
            android:layout_height="60.0dip"
            android:layout_alignTop="@+id/overview"
            android:layout_centerInParent="true"
            android:focusable="false"
            android:scaleType="fitXY" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dip"
          />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/relative1"
        android:layout_toLeftOf="@id/arrow"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dip" >

        <TextView
            android:id="@+id/software_name"
            style="@style/software_list_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:gravity="left" />
        
        <TextView
            android:id="@+id/software_size"
            style="@style/software_list_item_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/software_name"
            android:gravity="left" />
        
        <TextView
	        android:id="@+id/software_download_count"
	        style="@style/software_list_item_info"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:gravity="right"
	        android:layout_marginRight="5dip"
	        android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

</RelativeLayout>